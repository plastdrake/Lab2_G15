<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConcertBookingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConcertBookingApp"
    xmlns:views="clr-namespace:ConcertBookingApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ConcertBookingApp">

    <!-- Home Page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Concerts Page -->
    <ShellContent
        Title="Concerts"
        Route="ConcertsPage">
        <views:ConcertsPage />
    </ShellContent>

    <!-- Bookings Page -->
    <ShellContent
        Title="Bookings"
        Route="BookingPage">
        <views:BookingPage />
    </ShellContent>

    <!-- Performances Page -->
    <ShellContent
        Title="Performances"
        Route="PerformancePage">
        <views:PerformancePage />
    </ShellContent>

</Shell>
