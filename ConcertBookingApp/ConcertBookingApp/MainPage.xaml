<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertBookingApp.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <Label Text="Welcome to Concert Booking App"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Navigation Buttons -->
            <Button Text="View Concerts"
                    FontSize="18"
                    BackgroundColor="#6200EE"
                    TextColor="White"
                    CornerRadius="10"
                    Command="{Binding NavigateToConcertsCommand}" />

            <Button Text="My Bookings"
                    FontSize="18"
                    BackgroundColor="#03A9F4"
                    TextColor="White"
                    CornerRadius="10"
                    Command="{Binding NavigateToBookingsCommand}" />

            <Button Text="About Us"
                    FontSize="18"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    Command="{Binding NavigateToAboutCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
